/*6.Leia 8 números, insira-os em um vetor e determine: o maior valor e em qual posição ele está, o menor valor e em qual posição ele está.*/        
  
#include <iostream>
   using namespace std;
   int main() {
      
       int n[8];
       for (int i = 0; i < 8; i++) {
           cout << "Digite o valor do numero ";
       cin >> n[i];}


       cout << "Os valores digitados foram: ";
       for (int i = 0; i < 5; i++) {
           cout << n[i] << " ";
       }


       float maior = n[0], menor = n[0];
       float pmax = n[0], pmin = n[0];
      
       for (int i = 1; i < 8; i++) {
           if (n[i] > maior){
               maior = n[i];
               pmax = i;
           }
           if (n[i] < menor){
               menor = n[i];
               pmin= i;
           }
       }


        cout << "O maior valor é " << maior << " e está na posição " << pmax + 1 << endl;
        cout << "O menor valor é " << menor << " e está na posição " << pmin + 1 << endl;
   return 0;
   }
